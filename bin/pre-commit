#!/bin/bash

exit_status=0

echo 'Running rubocop'
echo '---'

if ! rubocop .; then
  echo 'Fix the above rubocop errors'
  exit_status=1
fi

echo ''
echo 'Running foodcritic'
echo '---'

if ! foodcritic -f any .; then
  echo 'Fix the above foodcritic errors'
  exit_status=1
fi

echo ''
echo 'Running rspec'
echo '---'

if ! RUBYOPT='-W0' rspec .; then
  echo 'Fix the above rspec errors'
fi

exit $exit_status
