#!/bin/bash

exit_status=0
exit_message="Pre-commit errors:\n"
errors=()

echo 'Running rubocop'
echo '---'

if ! rubocop .; then
  errors+=(rubocop)
  exit_status=1
fi

echo ''
echo 'Running foodcritic'
echo '---'

if ! foodcritic -f any .; then
  errors+=(foodcritic)
  exit_status=1
fi

echo ''
echo 'Running rspec'
echo '---'

if ! RUBYOPT='-W0' rspec .; then
  errors+=(rspec)
  exit_status=1
fi

if [ -n "$errors" ]; then
  for i in ${errors[@]}; do
    exit_message+=" - $i\n"
  done
else
  exit_message+=" - none\n"
fi

echo -e "$exit_message"
exit $exit_status
